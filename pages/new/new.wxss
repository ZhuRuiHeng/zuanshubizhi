/* pages/new/new.wxss */
/*轮播*/
.container {
  padding: 0;
  overflow: hidden;
}
.swiper{
  width: 750rpx;
  height: 416rpx;
}
.swiper swiper-item image{
  display: block;
  width: 100%;
  height: 100%;
}
.img_tip{
  position: absolute;
  width: 750rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0.2);
  margin-top: -100rpx;
  color: #fff;
  font-size: 30rpx;
  box-sizing: border-box;
  padding:10rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.niceImg{
    overflow: hidden;
    display: block;
    width: 100%;
    padding:10rpx 0 10rpx 10rpx;
    box-sizing: border-box;
}
.niceImg .nice{
  float: left;
  width: 33.3%;
  display: block;
  padding:0rpx 10rpx 6rpx 0;
  box-sizing: border-box;
}
.niceImg .nice image{
  width:100%;
}
/*分享  */
.share{
    background: rgba(0,0,0,0.8); opacity: 0.8; filter:alpha(opacity=80);
    border-radius: 50%;
    width: 60rpx;
    height: 60rpx;
    padding:0;
    overflow:hidden;
    position:fixed;
    right:20rpx;
    bottom:100rpx;
    z-index:99;
    text-align: center;
    vertical-align: middle;
}
.share image{
   width:30rpx;
}
.share button{
  position:relative;
  display:block;
  margin: 0;
  padding:0;
  box-sizing:border-box;
  font-size:24rpx;
  text-align:center;
  text-decoration:none;
  line-height:2.55555556;
  border-radius:0px;
  -webkit-tap-highlight-color:transparent;
  overflow:hidden;
  color:#000000;
  background: none;
}
.share button::after{
  content: none;
}